
# Configuração de Segurança - Moransa
# App comunitário para Guinea-Bissau

## Ambiente
ENVIRONMENT=development

## URLs de API
API_BASE_URL=http://localhost:8000
PROD_API_BASE_URL=https://api.moransa.gw
TEST_API_BASE_URL=http://localhost:8000

## Configurações de segurança
API_KEY=your-api-key-here
USE_HTTPS=false
REQUEST_TIMEOUT=30

## Configurações de autenticação
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

## Configurações de banco de dados
DATABASE_URL=sqlite:///moransa.db
DATABASE_URL_PROD=postgresql://user:pass@localhost/moransa

## Configurações de cache
ENABLE_CACHE=true
CACHE_MAX_AGE=3600

## Configurações de logging
ENABLE_LOGGING=true
LOG_LEVEL=info

## Configurações específicas do Moransa
OFFLINE_MODE=false
SUPPORTED_LANGUAGES=pt,en,crioulo
DEFAULT_LANGUAGE=pt

## Configurações de emergência
EMERGENCY_MODE=false
EMERGENCY_CONTACT_URL=

## Configurações de upload
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,md

## Configurações de rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

## Configurações de cookies
SECURE_COOKIES=true
HTTPS_ONLY=false
CSRF_PROTECTION=true
