# Configuração para Modo Demonstração
# Hackathon Gemma 3n

# Modo demonstração ativado
DEMO_MODE=true

# Configurações básicas
FLASK_ENV=production
FLASK_DEBUG=false
PORT=8080

# Chaves de segurança (para demonstração)
SECRET_KEY=moransa_demo_secret_key_hackathon_gemma3n
JWT_SECRET_KEY=moransa_demo_jwt_secret_hackathon

# Configurações de banco (não necessárias para demo)
# DATABASE_URL=sqlite:///demo.db
# REDIS_URL=redis://localhost:6379/0

# Configurações do Ollama (desabilitadas em modo demo)
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=gemma3n:latest

# Configurações específicas da Guiné-Bissau
DEFAULT_LANGUAGE=pt
SUPPORTED_LANGUAGES=pt,en,creole,fula,mandinka
TIMEZONE=Africa/Bissau

# Configurações de demonstração
DEMO_RESPONSES_FILE=backend/demo_config.json
DEMO_FEATURES=medical,education,agriculture,translation

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=logs/moransa_demo.log

# Configurações de CORS
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Informações do hackathon
HACKATHON_NAME=Gemma 3n Hackathon
PROJECT_NAME=Moransa
TARGET_COMMUNITY=Guinea-Bissau Rural Communities